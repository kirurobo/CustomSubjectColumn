{
  "manifest_version": 2,
  "name": "Custom subject column",
  "description": "Adds a shorter subject column to message list panel",
  "version": "0.0.7",
  "author": "Kirurobo",
  "browser_specific_settings": {
    "gecko": {
      "id": "custom-subject-column@kirurobo.com",
      "strict_min_version": "115.10.0",
      "strict_max_version": "125.*"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "48": "icon48.png"
  },
  "experiment_apis": {
    "customSubject": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "customSubject"
          ]
        ],
        "script": "implementation.js"
      }
    }
  }
}
